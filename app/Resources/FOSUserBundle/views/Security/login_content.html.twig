{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="login-form">
    <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <h4 class="form-signin-heading text-center">Zaloguj się lub <a href="{{ path('fos_user_registration_register') }}">zarejestruj</a></h4>
        <div class="form-group">
            <label class="sr-only" for="username">{{ 'security.login.username'|trans }}</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autofocus/>
        </div>
        <div class="form-group">
            <label class="sr-only" for="password">{{ 'security.login.password'|trans }}</label>
            <input class="form-control" type="password" id="password" name="_password" required="required" />
        </div>

        <div class="checkbox">
            <label for="remember_me">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                {{ 'security.login.remember_me'|trans }}
            </label>
        </div>

        <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        <a class="pull-left" href="{{ path('main_page') }}">strona główna</a>
        <a class="pull-right" href="{{ path('fos_user_registration_register') }}">zarejestruj</a>
    </form>
        
</div>

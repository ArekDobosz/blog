{% trans_default_domain 'FOSUserBundle' %}
<div class="change-paswd">
    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
        <div class="form-group">
            {{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': 'Obecne hasło'} }) }}
            <div class="custom-error">{{ form_errors(form.current_password) }}</div>
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Nowe hasło'} }) }}
            <div class="custom-error">{{ form_errors(form.plainPassword) }}</div>
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'Powtórz nowe hasło'} }) }}
            <div class="custom-error">{{ form_errors(form.plainPassword) }}</div>
        </div>
        <div>
            <input class="btn btn-primary btn-block" type="submit" value="{{ 'change_password.submit'|trans }}" />
        </div>
    {{ form_end(form) }}
    <a href="{{ path('fos_user_profile_edit') }}">wróć</a>
</div>

<?php

namespace AutoSerwisBundle\Entity;

use FOS\UserBundle\Model\User as BaseUser;
use Doctrine\ORM\Mapping as ORM;

use Symfony\Component\Validator\Constraints as Assert;
use Symfony\Component\HttpFoundation\File\UploadedFile;

/**
 * @ORM\Entity
 * @ORM\Table(name="fos_user")
 */
class User extends BaseUser
{
    const UPLOAD_DIR = 'uploads/avatars/';
    const DEFAULT_AVATAR = 'default.jpg';
    
    
    /**
     * @ORM\Id
     * @ORM\Column(type="integer")
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    protected $id;

    /**
     * @ORM\Column(type="string", length=100, nullable=true)
     */
    protected $firstName;
    
    /**
     * @ORM\Column(type="string", length=100, nullable=true)
     */
    protected $lastName;
    
    /**
     * @ORM\Column(type="datetime")
     */
    private $updateDate;

    /**
     * @ORM\Column(type="string", length=100, nullable=true)
     */
    private $avatar;
    
    /**
     * @var UploadedFile
     * 
     * @Assert\Image(
     *      minWidth=50,
     *      minHeight=50,
     *      maxWidth=150,
     *      maxHeight=150,
     *      maxSize="1M",
     *      groups={"ChangeDetails"}
     * )
     */
    private $avatarFile;

    private $avatarTemp;

    
    public function __construct()
    {
        parent::__construct();
    }

    /**
     * Set firstName
     *
     * @param string $firstName
     *
     * @return User
     */
    public function setFirstName($firstName)
    {
        $this->firstName = $firstName;
        
        return $this;
    }

    /**
     * Get firstName
     *
     * @return string
     */
    public function getFirstName()
    {
        return $this->firstName;
    }

    /**
     * Set lastName
     *
     * @param string $lastName
     *
     * @return User
     */
    public function setLastName($lastName)
    {
        $this->lastName = $lastName;

        return $this;
    }

    /**
     * Get lastName
     *
     * @return string
     */
    public function getLastName()
    {
        return $this->lastName;
    }

    /**
     * Set avatarFile
     *
     * @param string UploadedFile $uploadedFile
     *
     * @return User
     */
    public function setAvatarFile(UploadedFile $uploadedFile)
    {
        $this->avatar = $uploadedFile;
        $this->updateDate = new \DateTime();

        return $this;
    }

    /**
     * Get avatarFile
     *
     * @return string
     */
    public function getAvatarFile()
    {
        if($this->avatar == null) {
            return User::UPLOAD_DIR.User::DEFAULT_AVATAR;
        }
        return User::UPLOAD_DIR.$this->avatar;
    }
    
    /**
     * Set avatar
     *
     * @param string $avatar
     *
     * @return User
     */
    public function setAvatar($avatar)
    {        
        $this->avatar = $avatar;

        return $this;
    }

    /**
     * Get avatar
     *
     * @return string
     */
    public function getAvatar()
    {
        return $this->avatar;
    }
    

    /**
     * Set updateDate
     *
     * @param \DateTime $updateDate
     *
     * @return User
     */
    public function setUpdateDate($updateDate)
    {
        $this->updateDate = $updateDate;

        return $this;
    }

    /**
     * Get updateDate
     *
     * @return \DateTime
     */
    public function getUpdateDate()
    {
        return $this->updateDate;
    }
    
    /**
     * @ORM\PrePersist
     * @ORM\PreUpdate
     */
    public function preSave(){
        if($this->getAvatarFile() !== null){
            if($this->avatar !== null){
                $this->avatarTemp = $this->avatar;
                $avatarName = sha1(uniqid(null, true));
                $this->avatar = $avatarName.'.'.$this->getAvatarFile()->guessExtension();
            }
        }
    }
    
    /**
     * @ORM\PostPersist
     * @ORM\PostUpdate
     */
    public function postSave(){
        if($this->getAvatarFile() !== null){
            $this->getAvatarFile()->move($this->getRootDir(), $this->avatar);
        }
        
        unset($this->avatarFile);
        
        if($this->avatarTemp !== null) {
            unlink($this->getRootDir().$this->avatarTemp);
            unset($this->avatarTemp);
        }
    }
    
    public function getRootDir(){
        return __DIR__.'../../../../web'.User::UPLOAD_DIR;
    }
}
